pipeline {
    agent any
        withCredentials([file(credentialsId: 'gcp-key', variable: 'gcp-key')]) {
            sh("gcloud auth activate-service-account --key-file=${tf-gcp-key}")
            sh("gcloud container clusters get-credentials prod --zone us-central1-a	 --project tf-gcp-connection")
  }
       stages{
        stage('Terraform Apply') {
            steps {
                script {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
        }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t gcr.io/tf-gcp-connect/my-app:latest .'
                    sh 'docker push gcr.io/tf-gcp-connect/my-app:latest'
                }
            }
        }
        stage('Ansible Provision') {
            steps {
                script {
                    sh 'ansible-playbook -i inventory playbook.yml'
                }
            }
        }
  }
}
