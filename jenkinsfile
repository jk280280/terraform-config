pipeline {
    agent any
        environment {
        GOOGLE_APPLICATION_CREDENTIALS = credentials('0a823d8d-9782-4722-991e-7ac8f64f73a6')
    }
       stages{
        stage('Terraform Apply') {
            steps {
                script {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
        }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t gcr.io/tf-gcp-connect/my-app:latest .'
                    sh 'docker push gcr.io/tf-gcp-connect/my-app:latest'
                }
            }
        }
        stage('Ansible Provision') {
            steps {
                script {
                    sh 'ansible-playbook -i inventory playbook.yml'
                }
            }
        }
  }
}
